{% extends "layouts/default.twig" %}
{% block styles %}
<style>
    article,
    main {
        display: flex;
        flex-direction: column;
        gap: 2rem;
    }

    article {
        gap: 0.5rem;
    }
</style>
{% endblock %}

{% block content %}

{% for item in news  %}
<article>
    <h3>
        {{ item['title'] }}
    </h3>

    <p class="main">
        {{ item['body'] }}
    </p>
    <a href="/news/{{ item['slug'] }}">
        View article
    </a>
</article>
{% else %}
<h3>No News</h3>

<p>Unable to find any news for you.</p>

{% endfor %}

{% endblock %}